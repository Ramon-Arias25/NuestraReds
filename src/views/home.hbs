{{> post-topbar }}
{{> upload }}
<div class="card mt-2">
    <div class="card-header bg-dark text-white">
        <h3><i class="far fa-images"></i> Recent Uploads</h3>
    </div>
    <div class="card-body">
        <div class="row">
            {{#each images}}
            <div class="card-body">
                <p>{{image.description}}</p>
                <div class="col-md-12 text-center p2">
                    <a href="/images/{{ uniqueId }}">
                        <img src="/public/upload/{{filename}}" alt="{{title}}" class="img-fluid">
                    </a>
                </div>
                <div class="card-footer d-flex justify-content-between align-item-center">
                    <button class="btn btn-success" id="btn-like" data-id="{{image.filename}}">
                        <i class="fas fa-thumbs-up"></i> like
                    </button>
                    <p>
                        <span class="like-count">{{like}}</span>
                        <i class="fas fa-heart"></i>
                    </p>
                    <p>
                        <i class="fas fa-eye"></i>{{views}}
                    </p>
                    <p>
                        <i class="far fa-clock"></i>
                        {{timeago   timestamp}}
                    </p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>